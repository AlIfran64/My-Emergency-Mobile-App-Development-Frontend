<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4"
    android:background="@drawable/menu_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/menu_iconn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="270dp"/>

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/user_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ambulanceIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ambulance_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp" />

        <ImageView
            android:id="@+id/fireIcon"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/fire_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ambulance"
            android:textSize="25dp"
            android:layout_marginLeft="37dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:textSize="25dp"
            android:layout_marginLeft="125dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctorIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/doctor_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp" />

        <ImageView
            android:id="@+id/emergencyCall"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/emergency_call"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textSize="25dp"
            android:layout_marginLeft="65dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency\n      Call"
            android:textSize="25dp"
            android:layout_marginLeft="110dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bloodIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/blood_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp" />

        <ImageView
            android:id="@+id/othersIcon"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/others_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood"
            android:textSize="25dp"
            android:layout_marginLeft="65dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textSize="25dp"
            android:layout_marginLeft="140dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>


